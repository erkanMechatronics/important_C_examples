#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>

int divide(int dividend, int divisor);

int main()
{
	int num1,num2;
	printf("Enter dividend:");
	scanf("%d",&num1);
	printf("\nEnter divisor:");
	scanf("%d",&num2);
	
	printf("\n\n");
	printf("Output = %d",divide(num1,num2));
	
	return 0;
}


int divide(int dividend, int divisor)
{
	int toplam = 0;
	int sayac = 0;
	int real_sayac;
	int test_value;
	int toplam2 = 0;
	
	if (dividend > 0)
	{
		if (divisor < 0)
		{
			divisor = 0 - divisor;
			for(int i = 0;dividend > toplam;i++)
			{
				toplam = toplam + divisor;
				sayac = sayac + 1;
			}
		
			sayac = sayac - 1;
			real_sayac = sayac;
		
			for(int i = 0;i < sayac + 1;i++)
			{
				toplam2 = toplam2 + divisor;	
			}
		
			if(toplam2 == dividend)
			{
				sayac = sayac + 1;
			}
			else if(toplam2 != dividend)
			{
				sayac = real_sayac;
			}
			sayac = 0 - sayac;
		}
		else if(divisor > 0)
		{
			for(int i = 0;dividend > toplam;i++)
			{
				toplam = toplam + divisor;
				sayac = sayac + 1;
			}
		
			sayac = sayac - 1;
			real_sayac = sayac;
		
			for(int i = 0;i < sayac + 1;i++)
			{
				toplam2 = toplam2 + divisor;	
			}
		
			if(toplam2 == dividend)
			{
				sayac = sayac + 1;
			}
			else if(toplam2 != dividend)
			{
				sayac = real_sayac;
			}
				
		}
	}
	else if(dividend < 0)
	{
		dividend = 0 - dividend;
		if (divisor < 0)
		{
			divisor = 0 - divisor;
			for(int i = 0;dividend > toplam;i++)
			{
				toplam = toplam + divisor;
				sayac = sayac + 1;
			}
		
			sayac = sayac - 1;
			real_sayac = sayac;
		
			for(int i = 0;i < sayac + 1;i++)
			{
				toplam2 = toplam2 + divisor;	
			}
		
			if(toplam2 == dividend)
			{
				sayac = sayac + 1;
			}
			else if(toplam2 != dividend)
			{
				sayac = real_sayac;
			}
			
		}
		else if(divisor > 0)
		{
			for(int i = 0;dividend > toplam;i++)
			{
				toplam = toplam + divisor;
				sayac = sayac + 1;
			}
		
			sayac = sayac - 1;
			real_sayac = sayac;
		
			for(int i = 0;i < sayac + 1;i++)
			{
				toplam2 = toplam2 + divisor;	
			}
		
			if(toplam2 == dividend)
			{
				sayac = sayac + 1;
			}
			else if(toplam2 != dividend)
			{
				sayac = real_sayac;
			}
			sayac = 0 - sayac;
				
		}
		
		
		
	}
	else if (dividend == 0)
	{
		sayac = 0;
	}
	
	
	return sayac;
}
